<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<AnchorPane prefHeight="600.0" prefWidth="400.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.alanthechatbot.gui.MainWindow">
    <!-- ScrollPane fills available space -->
    <ScrollPane fx:id="scrollPane"
                hbarPolicy="NEVER" vvalue="1.0"
                AnchorPane.topAnchor="0.0"
                AnchorPane.leftAnchor="0.0"
                AnchorPane.rightAnchor="0.0"
                AnchorPane.bottomAnchor="42.0"
                style="-fx-background: black">
        <VBox fx:id="dialogContainer"/>
    </ScrollPane>

    <!-- TextField stretches horizontally at bottom -->
    <TextField fx:id="userInput"
               onAction="#handleUserInput"
               AnchorPane.leftAnchor="0.0"
               AnchorPane.bottomAnchor="0.0"
               AnchorPane.rightAnchor="76.0"
               prefHeight="41.0"/>

    <!-- Send Button sticks to bottom-right -->
    <Button fx:id="sendButton"
            text="Send"
            onAction="#handleUserInput"
            AnchorPane.rightAnchor="0.0"
            AnchorPane.bottomAnchor="0.0"
            prefHeight="41.0" prefWidth="76.0"/>
</AnchorPane>
